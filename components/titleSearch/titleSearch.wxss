.search {
    white-space: nowrap;
    align-items: center;
    width: 100%;
    padding: 0 32rpx;
    display: flex;
    position: fixed;
    z-index: 998;
    font-weight: 520;
    display: flex;
    justify-content: flex-end;
    flex-direction: column;
    align-items: flex-start;
    background-color: #fff;
    padding-bottom: 29.5rpx;
  }
  .search .input {
    width: 490rpx;
    /* margin: 0 auto; */
    height: 64rpx;
    display: flex;
    align-items: center;
    background: #F5F5F5;
    border-radius: 32rpx;
  }
  .getIntoIcon {
    display: inline-block;
    width: 27rpx;
    height: 27rpx;
    margin-left: 25rpx;
    font-size: 27rpx;
  }
  .getIntoIcon image{
    display: inline-block;
    width: 100%;
    height: 100%;
  }
  .search .van-icon-search {
    line-height: 59rpx;
  }
  
  .search .txt {
    height: 42rpx;
    line-height: 42rpx;
    color: #666;
    padding-left: 8rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #B2B2B2;
  }